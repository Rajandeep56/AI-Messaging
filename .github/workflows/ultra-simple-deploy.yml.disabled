name: Ultra Simple Deploy

on:
  push:
    branches: [ main, master ]
    paths:
      - 'chatter/**'
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    environment: chatter
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      
    - name: Setup Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '18'
        
    - name: Install Firebase CLI and EAS CLI
      run: |
        npm install -g firebase-tools
        npm install -g eas-cli
      
    - name: Deploy APK to Firebase App Distribution
      run: |
        cd chatter
        ./deploy-with-eas-apk.sh
      env:
        FIREBASE_SERVICE_ACCOUNT_KEY: ${{ secrets.FIREBASE_SERVICE_ACCOUNT_KEY }}
        EXPO_TOKEN: ${{ secrets.EXPO_TOKEN }}
        
    - name: Deploy Web Version
      run: |
        cd chatter
        npm ci
        npm run build:web
        firebase deploy --only hosting
      env:
        FIREBASE_SERVICE_ACCOUNT_KEY: ${{ secrets.FIREBASE_SERVICE_ACCOUNT_KEY }}
        
    - name: Success Message
      run: |
        echo "üéâ APK Deployment Completed Successfully!"
        echo "üì± Android APK deployed to Firebase App Distribution"
        echo "üåê Web version deployed to Firebase Hosting"
        echo "‚è±Ô∏è  Total time: ~2 minutes"
        echo "üìß Testers will receive email invitations"
        echo "üÜì Free Firebase App Distribution - No Google Play Store required!" 